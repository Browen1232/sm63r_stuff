<?xml version="1.1" encoding="UTF-8"?>
<items>
    <!-- 
        <class name="class name">
            [OPTIONAL] <property label="label name" type="property type" [OPTIONAL] link="see link documentation" [OPTIONAL] description="description to show" />
        </class>

        <item name="item name" description="item description">
            <texture tag="see tag documentation" path="res://somewhere/texture.png">
            [OPTIONAL] <inherit name="class name to inherit from" />
            [OPTIONAL] <property label="label name" type="property type" [OPTIONAL] link="see link documentation" [OPTIONAL] description="description to show" />
        </item>

        Link:
            The link is an optional value, if it is left out, no function besides the default ld_property_edited will be invoked.
            A link can start with a prefix, prefixes must be a path to a node, for example `res://somewhere/entity#`, if there is a prefix it will invoke the function found in the node listed in the prefix. The prefix ends once it reaches a #
            If there's no prefix, it will assume the function can be found in the item itself.

        Tag:
            There are several options for the tag:
            Placed: this tag means that this is the sprite showing up when placed in the ld.
            List: this tag means that this texture should be used in the item list menu.
    -->
    <class name="point">
        <property label="Position" type="Vector2" link="XXXXX" description="Position in the level." />
        <property label="Disabled" type="bool" link="XXXXX" description="Disables the item." />
    </class>
	
    <class name="pole">
		<inherit name="point" />
        <property label="Rotation" type="float" link="XXXXX" description="Rotation in degrees." />
    </class>
	
    <class name="post">
		<inherit name="point" />
        <property label="Mirror" type="bool" link="XXXXX" description="Flips the item in the X axis." />
    </class>
	
    <class name="plane">
        <inherit name="pole" />
        <inherit name="post" />
    </class>
	
    <class name="deco">
		<inherit name="plane" />
        <property label="Layer" type="int" link="XXXXX" description="Items with a higher layer will be displayed in front of items with a lower layer." />
    </class>

    <item name="DemoItem" description="The REAL demo item, can you believe it? Me neither.">
        <inherit name="plane" />
        <property label="Text" type="String" link="some_function" description="The text this item has. Idk." />
        <property label="Text" type="String" description="The text this item has. Idk." />
    </item>

    <item name="Yellow Coin" description="A single coin.">
		<texture tag="Placed" path="res://actors/items/coin/coin0.png" />
        <inherit name="point" />
    </item>

    <item name="Red Coin" description="Counts for 2 yellow coins. Collect them all to summon a Shine Sprite!" />
		<texture tag="Placed" path="res://actors/items/coin/red_coin0.png" />
        <inherit name="point" />
    </item>

    <item name="Blue Coin" description="Counts for 5 yellow coins!">
		<texture tag="Placed" path="res://actors/items/coin/blue_coin0.png" />
        <inherit name="point" />
    </item>

    <item name="Silver Star" description="Collect them all to summon a Shine Sprite!">
		<texture tag="List" path="res://gui/hud/hud_silver_shine.png" />
        <inherit name="point" />
    </item>

    <item name="Shine Sprite" description="The level goal!">
		<texture tag="Placed" path="res://actors/items/shine/shine_placed.png" />
		<texture tag="List" path="res://gui/hud/hud_shine_old.png" />
		<!--TODO: trigger properties (e.g. red coins, silver shines, boss - pipescript?), shine ID for missions-->
        <inherit name="point" />
    </item>

    <item name="Spin Block" description="A spinning block.">
		<!--TODO: all properties lol-->
        <inherit name="point" />
    </item>

    <item name="Log" description="A wooden log.">
		<texture tag="Placed" path="res://actors/items/log/log.png" />
        <inherit name="point" />
    </item>

    <item name="Falling Log" description="An unstable wooden log. Falls when stepped on!">
        <inherit name="point" />
		<property label="Wait Time" type="float" link="XXXXX" description="The time taken in seconds for the log to fall after being stepped on. Setting the time to -1 will cause the log to fall immediately, with no collision." />
    </item>
</items>